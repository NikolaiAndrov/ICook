@model EditRecipeInputModel

@{
	this.ViewData["Title"] = "Edit Recipe";
}

<div class="text-center">
	<h1 class="display-6">@this.ViewData["Title"]</h1>
</div>

<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Instructions"></label>
				<textarea asp-for="Instructions" rows="4" class="form-control"></textarea>
				<span asp-validation-for="Instructions" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PreparationTime"></label>
				<input asp-for="PreparationTime" class="form-control" />
				<span asp-validation-for="PreparationTime" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CookingTime"></label>
				<input asp-for="CookingTime" class="form-control" />
				<span asp-validation-for="CookingTime" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PortionsCount"></label>
				<input asp-for="PortionsCount" class="form-control" />
				<span asp-validation-for="PortionsCount" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId"></label>
				<select asp-for="CategoryId" class="form-control text-bg-info">
					@foreach (var category in Model.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<span asp-validation-for="CategoryId" class="small text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-outline-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>